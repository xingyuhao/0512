<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.henu.xing.a0512.MainActivity">

    <FrameLayout
        android:id="@+id/farme"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></FrameLayout>
    <RadioGroup
        android:id="@+id/group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <RadioButton
            android:checked="true"
            android:text="首页"
            android:textColor="@drawable/press_text"
            android:drawableTop="@drawable/press_btn1"
            android:button="@null"
            android:id="@+id/btn1"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="好友"
            android:textColor="@drawable/press_text"
            android:drawableTop="@drawable/press_btn2"
            android:button="@null"
            android:id="@+id/btn2"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="服务"
            android:textColor="@drawable/press_text"
            android:button="@null"
            android:drawableTop="@drawable/press_btn3"
            android:id="@+id/btn3"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="我的"
            android:textColor="@drawable/press_text"
            android:button="@null"
            android:drawableTop="@drawable/press_btn4"
            android:id="@+id/btn4"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </RadioGroup>
</LinearLayout>
